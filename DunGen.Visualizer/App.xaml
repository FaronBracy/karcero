<Application x:Class="DunGen.Visualizer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:l="clr-namespace:DunGen.Visualizer"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <l:TileTypeToBackgroundColorConverter x:Key="TileTypeToBackgroundColorConverter" />
        <l:WidthToContainerWidth x:Key="WidthToContainerWidth" />
        <l:SidesToBorderThickness x:Key="SidesToBorderThickness" />
        <l:SideTypeToVisibility x:Key="SideTypeToVisibility" />
        <system:Double x:Key="TileSize">20</system:Double>
    </Application.Resources>
</Application>

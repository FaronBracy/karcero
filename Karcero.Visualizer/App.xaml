<Application x:Class="Karcero.Visualizer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:l="clr-namespace:Karcero.Visualizer"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <l:TileTypeToBackgroundColorConverter x:Key="TileTypeToBackgroundColorConverter" />
        <l:WidthToContainerWidth x:Key="WidthToContainerWidth" />
        <l:CellToDoorConverter x:Key="CellToDoorConverter" />
        <l:CellToSpriteRect x:Key="CellToSpriteRect" />
        <system:Double x:Key="TileSize">20</system:Double>
        <BitmapImage x:Key="GridSprite" UriSource="./Resources/GridSprite.png" />
        <BitmapImage x:Key="DawnlikeSprite" UriSource="./Resources/DawnlikeSprite.png" />
        <BitmapImage x:Key="OryxSprite" UriSource="./Resources/OryxSprite.png" />
    </Application.Resources>
</Application>
